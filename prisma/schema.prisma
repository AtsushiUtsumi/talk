generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Langage {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  code       String   @unique
  name       String   @unique
  texts      Text[]
}

model Text {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  langage_id Int
  langage    Langage  @relation(fields: [langage_id], references: [id])
  text       String   @unique
}
